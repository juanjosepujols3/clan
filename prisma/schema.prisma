generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WarningType {
  NO_PHASE1
  NO_SWORDS_STREAK
}

model User {
  id           String          @id @default(cuid())
  name         String?
  email        String          @unique
  emailVerified DateTime?
  image        String?
  passwordHash String
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  accounts     Account[]
  sessions     Session[]
  memberships  ClanMembership[]
  preferences  UserPreference?
}

model UserPreference {
  id             String   @id @default(cuid())
  userId         String   @unique
  selectedClanId String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user          User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  selectedClan  Clan? @relation(fields: [selectedClanId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Clan {
  id               String           @id @default(cuid())
  name             String           @unique
  allowClosedEdits Boolean          @default(false)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  memberships      ClanMembership[]
  players          Player[]
  periods          Period[]
  warnings         WarningEvent[]
  explorationLogs  ExplorationEntry[]
  selectedByUsers  UserPreference[]
}

model ClanMembership {
  id        String   @id @default(cuid())
  userId    String
  clanId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  clan Clan @relation(fields: [clanId], references: [id], onDelete: Cascade)

  @@unique([userId, clanId])
}

model Player {
  id        String   @id @default(cuid())
  clanId    String
  ign       String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clan         Clan               @relation(fields: [clanId], references: [id], onDelete: Cascade)
  phase1Entries Phase1Entry[]
  exploration   ExplorationEntry[]
  warnings      WarningEvent[]

  @@unique([clanId, ign])
}

model Period {
  id                String        @id @default(cuid())
  clanId            String
  name              String
  startDate         DateTime
  endDate           DateTime
  isClosed          Boolean       @default(false)
  phase1Top30Total  Int           @default(0)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  clan       Clan          @relation(fields: [clanId], references: [id], onDelete: Cascade)
  phase1     Phase1Entry[]
  warnings   WarningEvent[]

  @@unique([clanId, startDate])
}

model Phase1Entry {
  id        String   @id @default(cuid())
  periodId  String
  playerId  String
  value     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  period Period @relation(fields: [periodId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([periodId, playerId])
}

model ExplorationEntry {
  id        String   @id @default(cuid())
  clanId    String
  playerId  String
  date      DateTime
  swords    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clan   Clan   @relation(fields: [clanId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([playerId, date])
  @@index([clanId, date])
}

model WarningEvent {
  id            String      @id @default(cuid())
  clanId        String
  playerId      String
  periodId      String?
  type          WarningType
  triggerDate   DateTime
  details       Json?
  acknowledgedAt DateTime?
  createdAt     DateTime    @default(now())

  clan   Clan   @relation(fields: [clanId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id], onDelete: Cascade)
  period Period? @relation(fields: [periodId], references: [id], onDelete: Cascade)

  @@unique([playerId, type, triggerDate])
  @@index([clanId, type])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
